{
  "compilerOptions": {
    // Default
    "target": "ES2019",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    // Added
    "jsx": "react",
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "baseUrl": "./src",
    "paths": {
      "@*": ["./*"],
      "@assets": ["assets/*"],
      "@components": ["components/*"],
      "@constants": ["constants"],
      "@shared": ["shared"],
      "@utils": ["utils"],
      "@tokens": ["shared/stylesheets/tokens/_index.scss"]
    },
    "resolveJsonModule": true
  },
  "exclude": [""]
}
